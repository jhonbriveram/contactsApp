
<button
  type="button"
  class="btn btn-warning"
  data-toggle="modal"
  data-target="#exampleModalCenter"
>
  Agregar Contacto
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModalCenter"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Nuevo Contacto</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form action="/add" method="POST">
            <input class="list-group-item list-group-item-action" type="text" name="nombre"  placeholder="Ingresa el nombre...">
            <input class="list-group-item list-group-item-action" type="text" name="correo" placeholder="Ingresa el correo...">
            <input class="list-group-item list-group-item-action" type="text" name="telefono" placeholder="Ingresa el telefono...">
            <input class="list-group-item list-group-item-action" type="date" name="fechanacimiento" >
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">
          Cancelar
        </button>
      </div>
    </div>
  </div>
</div>

